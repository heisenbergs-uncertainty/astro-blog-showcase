---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
    const posts = await getCollection("blog");
    return posts.map((post) => ({
        params: { slug: post.slug },
        props: post,
    }));
}

const post = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title}>
    <section class="py-16 md:py-24">
        <div class="max-w-4xl mx-auto px-4">
            <a
                href="/blog"
                class="text-gray-400 hover:text-white mb-8 inline-flex items-center transition-colors group"
                ><span
                    class="mr-2 group-hover:-translate-x-1 transition-transform"
                    >‚Üê</span
                > Back to Blog</a
            >
            <article
                class="glass-panel p-8 md:p-12 rounded-2xl border border-[var(--color-glass-border)]"
            >
                {
                    post.data.heroImage && (
                        <div class="mb-10 rounded-xl overflow-hidden shadow-2xl">
                            <img
                                width={1020}
                                height={510}
                                src={post.data.heroImage}
                                alt=""
                                class="w-full h-auto object-cover"
                            />
                        </div>
                    )
                }

                <header class="mb-10 text-center">
                    <h1
                        class="text-4xl md:text-5xl font-bold text-white mb-4 leading-tight tracking-tight"
                    >
                        {post.data.title}
                    </h1>
                    <div class="text-gray-400 text-lg">
                        <time datetime={post.data.pubDate.toISOString()}>
                            {
                                post.data.pubDate.toLocaleDateString("en-us", {
                                    year: "numeric",
                                    month: "long",
                                    day: "numeric",
                                })
                            }
                        </time>
                    </div>
                </header>

                <hr class="border-white/10 mb-10" />

                <div
                    class="prose prose-invert prose-lg md:prose-xl max-w-none text-gray-300 leading-relaxed"
                >
                    <Content />
                </div>
            </article>
        </div>
    </section>
</Layout>
