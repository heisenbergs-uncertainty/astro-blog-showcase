---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
    const projects = await getCollection("projects");
    return projects.map((project) => ({
        params: { slug: project.slug },
        props: { project },
    }));
}

const { project } = Astro.props;
const { Content } = await project.render();
---

<Layout title={project.data.title}>
    <section class="py-16 md:py-24">
        <div class="max-w-4xl mx-auto px-4">
            <a
                href="/portfolio"
                class="text-gray-400 hover:text-white mb-8 inline-flex items-center transition-colors group"
                ><span
                    class="mr-2 group-hover:-translate-x-1 transition-transform"
                    >‚Üê</span
                > Back to Portfolio</a
            >
            <article
                class="glass-panel p-8 md:p-12 rounded-2xl border border-[var(--color-glass-border)]"
            >
                {
                    project.data.heroImage && (
                        <div class="mb-10 rounded-xl overflow-hidden shadow-2xl">
                            <Image
                                width={1020}
                                height={510}
                                src={project.data.heroImage}
                                alt=""
                                class="w-full h-auto object-cover"
                            />
                        </div>
                    )
                }
                <div class="mb-10">
                    <h1
                        class="text-4xl md:text-5xl font-bold text-white mb-6 leading-tight"
                    >
                        {project.data.title}
                    </h1>
                    <div class="flex flex-wrap gap-2 mb-8">
                        {
                            project.data.stack.map((tech) => (
                                <span class="px-4 py-1.5 bg-[var(--color-primary)]/10 text-[var(--color-primary)] rounded-full text-sm font-medium border border-[var(--color-primary)]/20 shadow-[0_0_10px_rgba(130,80,210,0.1)]">
                                    {tech}
                                </span>
                            ))
                        }
                    </div>
                    <div class="flex flex-wrap gap-4">
                        {
                            project.data.projectUrl && (
                                <a
                                    href={project.data.projectUrl}
                                    class="btn bg-[var(--color-primary)] text-white hover:text-white hover:shadow-[0_0_20px_rgba(130,80,210,0.4)] px-6 py-3"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                >
                                    Live Demo
                                </a>
                            )
                        }
                        {
                            project.data.repoUrl && (
                                <a
                                    href={project.data.repoUrl}
                                    class="btn border border-white/20 text-white hover:bg-white/10 hover:border-white/40 px-6 py-3"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                >
                                    Code
                                </a>
                            )
                        }
                    </div>
                </div>

                <hr class="border-white/10 mb-10" />

                <div
                    class="prose prose-invert prose-lg md:prose-xl max-w-none text-gray-300 leading-relaxed"
                >
                    <Content />
                </div>
            </article>
        </div>
    </section>
</Layout>
