---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

interface Props {
    project: CollectionEntry<"projects">;
}

const { project } = Astro.props;
---

<div
    class="glass-panel h-full flex flex-col rounded-xl overflow-hidden card-hover group"
>
    {
        project.data.heroImage && (
            <div class="p-5 pb-0">
                <figure class="aspect-video w-full rounded-lg overflow-hidden relative">
                    <Image
                        src={project.data.heroImage}
                        alt={project.data.title}
                        class="object-contain w-full h-full"
                    />
                </figure>
            </div>
        )
    }
    <div class="p-6 flex-grow flex flex-col">
        <a href={`/projects/${project.slug}`} class="block mb-4">
            <div>
                <p
                    class="text-2xl font-bold text-[var(--color-primary)] group-hover:text-[var(--color-link)] transition-colors mb-1"
                >
                    {project.data.title}
                </p>
                <p class="text-sm text-gray-400 mb-4">
                    <time datetime={project.data.pubDate.toISOString()}>
                        {
                            project.data.pubDate.toLocaleDateString("en-us", {
                                year: "numeric",
                                month: "short",
                                day: "numeric",
                            })
                        }
                    </time>
                </p>

                <div class="text-gray-300 mb-4 line-clamp-3">
                    {project.data.description}
                </div>

                <div class="flex flex-wrap gap-2 mt-auto">
                    {
                        project.data.stack.map((tech) => (
                            <span class="px-3 py-1 bg-[var(--color-primary)]/10 text-[var(--color-primary)] border border-[var(--color-primary)]/20 rounded-full text-xs font-medium">
                                {tech}
                            </span>
                        ))
                    }
                </div>
            </div>
        </a>
    </div>

    <footer
        class="border-t border-white/10 flex divide-x divide-white/10 bg-black/20"
    >
        {
            project.data.projectUrl && (
                <a
                    href={project.data.projectUrl}
                    class="flex-1 flex items-center justify-center py-3 text-sm font-medium text-gray-300 hover:text-white hover:bg-white/5 transition-colors"
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    Live Demo
                </a>
            )
        }
        {
            project.data.repoUrl && (
                <a
                    href={project.data.repoUrl}
                    class="flex-1 flex items-center justify-center py-3 text-sm font-medium text-gray-300 hover:text-white hover:bg-white/5 transition-colors gap-2"
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    <span class="w-4 h-4">
                        <svg
                            role="img"
                            viewBox="0 0 24 24"
                            xmlns="http://www.w3.org/2000/svg"
                            fill="currentColor"
                        >
                            <title>GitHub</title>
